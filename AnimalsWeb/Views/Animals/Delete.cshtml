@model AnimalsWeb.Models.Animal

@{
    ViewData["Title"] = "Удаление животного";
}

<h2>Удалить животное</h2>

<div class="card mb-4">
    <div class="card-header">
        <h4>@Model.Species</h4>
    </div>
    <div class="card-body">
        <p><strong>Класс:</strong> @Model.Class</p>
        <p><strong>Вид:</strong> @Model.Species</p>
        <p><strong>Возраст:</strong> @Model.Age</p>
        <p><strong>Вес:</strong> @Model.Weight</p>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>