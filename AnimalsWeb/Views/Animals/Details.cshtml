@model AnimalsWeb.Models.Animal

@{
    ViewData["Title"] = "Детали животного";
}
<h2>Информация о животном</h2>

<div class="card mb-4">
    <div class="card-header">
        <h4>@Model.Class @Model.Class (@Model.Age)</h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Класс животного:</div>
            <div class="col-md-9">@Model.Class</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Вид:</div>
            <div class="col-md-9">@Model.Species</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Возраст:</div>
            <div class="col-md-9">@Model.Age</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Вес:</div>
            <div class="col-md-9">@Model.Weight</div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
