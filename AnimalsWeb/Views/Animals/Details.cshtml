@model AnimalsWeb.Models.Animal

@{
    ViewData["Title"] = "Детали животного";
}

<h2>Детали животного</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Класс</dt>
        <dd class="col-sm-10">@Model.Class</dd>

        <dt class="col-sm-2">Возраст</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Вид</dt>
        <dd class="col-sm-10">@Model.Species</dd>

        <dt class="col-sm-2">Вес</dt>
        <dd class="col-sm-10">@Model.Weight</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
