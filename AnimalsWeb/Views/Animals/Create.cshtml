@model AnimalsWeb.Models.Animal //для работы с объектом Animal (создание объекта)

@{
    ViewData["Title"] = "Hui";
}

<h2>Добавление нового животного</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Species" class="control-label">Вид</label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Class" class="control-label">Класс</label>
                <select asp-for="Class" class="form-control">
                    <option value="">-- Выберите класс --</option>
                    <option value="Млекопитающее">Млекопитающее</option>
                    <option value="Птица">Птица</option>
                    <option value="Насекомое">Насекомое</option>
                    <option value="Паукообразное">Паукообразное</option>
                    <option value="Рыбы">Рыбы</option>
                </select>
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Weight" class="control-label">Вес (кг)</label>
                <input asp-for="Weight" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Age" class="control-label">Возраст (лет)</label>
                <input asp-for="Age" class="form-control" type="number" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a asp-action="Index" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
