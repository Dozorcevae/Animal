@model IEnumerable<AnimalsWeb.Models.Animal>

@{
    ViewData["Title"] = "Список животных";
}

<h2 class="text-center">Список животных</h2>

<div class="d-flex justify-content-between mb-3 mt-4">
    <a class="btn btn-pink" asp-action="Create">🐶 Добавить животное 🐶</a>

    <form asp-action="Index" method="get" class="form-inline">
        <div class="input-group">
            <input type="text" name="searchQuery" class="form-control" placeholder="Поиск..."
                   value="@ViewBag.CurrentFilter"/>
            <button type="submit" class="btn btn-outline-secondary">Поиск</button>
        </div>
    </form>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var animals in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">@animals.Species</h4>
                    </div>
                    <div class="card-body">
                        <p><strong>Класс:</strong> @animals.Class</p>
                        <p><strong>Вид:</strong> @animals.Species</p>
                        <p><strong>Возраст:</strong> @animals.Age<small> лет</small></p>
                        <p><strong>Вес:</strong> @animals.Weight<small> кг</small></p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@animals.Id" class="btn btn-view">Просмотр</a>
                        <a asp-action="Edit" asp-route-id="@animals.Id" class="btn btn-edit">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@animals.Id" class="btn btn-danger2">Удалить</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center mt-4">
            <p class="fs-4 text-muted">🌸 Нет доступных животных 🌸</p>
        </div>

    }
</div>